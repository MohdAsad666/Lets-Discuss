<section id="post-area">
    <%for(post of posts){%>
        <li>
            <p>
                <%if(locals.user && (post.user.id == locals.user.id)){%>
                    <small><a href="/user/post/delete/<%=post.id%>">x</a></small>
                <%}%>
                <%=post.content%>
                <br>
                <%=post.user.name%>
            </p>
        </li>
        
            <div class="comment-form">
                <%if(locals.user){%>
                <form action="/user/comment/create" method="POST">
                    <input type="text" name="comment" required>
                    <input type="hidden" name="post" value="<%=post._id%>">
                    <input type="submit" value="Add comment">
                </form>
                 <%}%>
            </div>
            <%-include('_comment');%>
    <%}%>

</section>